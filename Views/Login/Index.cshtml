@using Newtonsoft.Json;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
    var erSession = Context.Session.GetString("ErrorLogin");
    string? ErrorMessage = null;
    if (erSession != null)
    {
        ErrorMessage = JsonConvert.DeserializeObject<String>(erSession);
    }
}

<div style="width: 100%; height: 100%;">

    <section class="vh-100" style="color: black;">

        <div class="container py-5 h-100">

            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5" style="margin-left: 670px; margin-bottom: 90px;">
                    <div class="card shadow-2-strong" style="border-radius: 3rem; ">

                        <div class="card-body p-5 text-center">

                            <h3 style="color: rgb(32, 27, 27)" class="mb-5">Sign in</h3>
                            <form method="post" action="/Login/Verify" class="LoginFunction">

                                <div class="form-outline mb-4">
                                    <input type="text" id="typeEmailX-2" class="form-control form-control-lg" name="username" placeholder="Username" />
                                    <p style="color:red; text-align:left"></p>
                                </div>

                                <div class="form-outline mb-4">
                                    <input type="password" id="typePasswordX-2" class="form-control form-control-lg" name="password" placeholder="Password" />
                                    <p style="color:red; text-align:left">@ErrorMessage</p>
                                </div>

                                <!-- Checkbox -->
                                <div class="row mb-4">
                                    <div class="col d-flex justify-content-center">
                                        <!-- Checkbox -->
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="yes" id="form2Example31" name="isRem" />
                                            <label class="form-check-label" for="form2Example31"> Remember me </label>
                                        </div>
                                    </div>

                                    <div class="col">
                                        <!-- Simple link -->
                                        <a style="color: #000; margin-right: 62px;" href="/SignUp">Register</a>
                                        <br />
                                        <a style="color: black;" href="/ForgetPassword">Forget Password</a>


                                    </div>
                                </div>
                                <button style="font-weight: bold;" class="btn btn-primary btn-lg btn-block" id="BtnSubmitLogin" type="submit" value="Submit" name="signinSubmit"><span style=" color: #06040c;">Login</span></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
