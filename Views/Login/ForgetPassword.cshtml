
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}
<section class="vh-100" style="color: black;">

    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5" style="margin-left: 670px;  margin-bottom: 90px;">
                <div class="card shadow-2-strong" style="border-radius: 3rem; ">
                    <div class="card-body p-5 text-center">

                        <h5 class="mb-5">Please provide your email so we can send you account information.</h5>
                        <form name="Send" method="post" action="${pageContext.request.contextPath}/sendEmail">
                            <div class="form-outline mb-4">
                                <input type="text" id="typeEmailX-2" class="form-control form-control-lg" name="email" placeholder="Email" />
                                <a style="color: #000; margin-left: 84%; " href="/Login">Sign in</a>
                            </div>

                            <button class="btn btn-primary btn-lg btn-block" type="submit" value="Submit" name="forgotPassword">Send</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

