
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout_Main.cshtml";
}
<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Home</a>
                <a class="breadcrumb-item text-dark" href="#">Shop</a>
                <span class="breadcrumb-item active">Checkout</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Checkout Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <h5 class="section-title position-relative text-uppercase mb-3">
                <span class="bg-secondary pr-3">
                    Billing
                    Address
                </span>
            </h5>

            <div class="bg-light p-30 mb-5">
                <button style="margin-left: 690px; border: none;" onclick="openForm()">Use another address</button>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label>Full name</label>

                        <p class="form-control">Quoc Hoang</p>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>E-mail</label>
                        <p class="form-control">QuocHoang@Gmail.com</p>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Address</label>
                        <p class="form-control">227 Can Tho</p>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Phone number</label>
                        <p class="form-control">0333744591</p>
                    </div>
                </div>

            </div>
        </div>









        <div class="col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3">
                <span class="bg-secondary pr-3">
                    Order
                    Total
                </span>
            </h5>
            <div class="bg-light p-30 mb-5">
                <div class="border-bottom">
                    <h6 class="mb-3">Products</h6>
                    <div class="d-flex justify-content-between">

                        <p><span>x1 </span>Product Name 1</p>
                        <p>$150</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p><span>x1 </span>Product Name 2</p>
                        <p>$150</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p><span>x1 </span>Product Name 3</p>
                        <p>$150</p>
                    </div>
                </div>
                <div class="border-bottom pt-3 pb-2">
                    <div class="d-flex justify-content-between mb-3">
                        <h6>Total amount</h6>
                        <h6>$450</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium">Shipping</h6>
                        <h6 class="font-weight-medium">$10</h6>
                    </div>
                </div>
                <div class="pt-2">
                    <div class="d-flex justify-content-between mt-2">
                        <h5>Total</h5>
                        <h5>$460</h5>
                    </div>
                </div>
                <div class="bg-light p-30">
                    <a class="btn btn-block btn-primary font-weight-bold py-3" href="/order" style="color:black; ">
                        Place
                        Order
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
<!-- Checkout End -->
<!--View Details Start-->
<div class="user">
    <section class="h-100" id="chosingAddressForm">
        <div class="card-address">
            <div class="row">
                <h2 class="title" style="font-size: 200%; ">Choosing Address</h2>

            </div>


            <div class="pricing">
                <div class="scroll-address">
                    <div class="address-container">
                        <input type="radio" class="radio-input" name="address" id="address1">
                        <label class="address-label" for="address1">Address 1:</label><br>
                        <span>Full name: Quoc Hoang</span><br>
                        <span>Phone number: 0939105522</span><br>
                        <span>Address: 227 Cần Thơ</span>
                    </div>

                    <div class="address-container">
                        <input type="radio" class="radio-input" name="address" id="address2">
                        <label class="address-label" for="address2">Address 2:</label><br>
                        <span>Full name: Quoc Hoang1</span><br>
                        <span>Phone number: 0939105512</span><br>
                        <span>Address: 287 Cần Thơ</span>
                    </div>

                </div>
            </div>
            <hr>
            <div class="info" style="text-align: center;">
                <div class="flex-container">
                    <button class="button-5" style="margin-right: 10px; " role="button">Submit</button>
                    <button class="button-5" onclick="closeForm()" style="margin-left: 10px; background-color: transparent; border-color: #fa6400; color: #fa6400;" role="button">
                        Cancel
                    </button>
                </div>
            </div>



        </div>
    </section>
</div>
<script>
    function openForm() {
        document.getElementById("chosingAddressForm").style.display = "block";
    }

    function closeForm() {
        document.getElementById("chosingAddressForm").style.display = "none";
    }
</script>


<!--View Details End-->