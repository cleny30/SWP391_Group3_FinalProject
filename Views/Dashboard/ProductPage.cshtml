
@{
    ViewData["Title"] = "ProductPage";
    Layout = "~/Views/Shared/_Layout_Dashboard.cshtml";

}

<div class="body-wrapper">
    <div class="container">
        <div class="container">
            <h1 class="Header">PRODUCTS MANAGEMENT</h1>
            <div class="tabs">
                <div class="tabby-tab">
                    <input type="radio" id="tab-1" name="tabby-tabs" checked>
                    <label for="tab-1" class="tabby-tablabel">PRODUCTS</label>
                    <div class="tabby-content">
                        <div class="col-12" style="text-align: center;">
                            <h1 class="Title">DANH SÁCH SẢN PHẨM TRONG KHO</h1>
                            <button type="button" id="contactAddProduct" class="btn btn-outline-primary m-1">
                                <i class="fa-solid fa-plus"></i> Add Product
                            </button>
                            <button type="button" id="contact" class="btn btn-outline-primary m-1">Categories</button>

                            <button type="button" id="contact2" class="btn btn-outline-primary m-1">Brands</button>
                        </div>
                        <table id="example" class="table table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Category</th>
                                    <th>Brand</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th> </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>MS001</td>
                                    <td>Razer Python V3</td>
                                    <td>Mouse</td>
                                    <td>Razer</td>
                                    <td>150$</td>
                                    <td>10</td>
                                    <td style="color:#5D87FF;">
                                        <a href="ProductInformation.html">
                                            <i class="fa-solid fa-pen"
                                               style="color: rgb(255, 200, 0)"></i>
                                        </a> <!--Edit here-->
                                    </td>
                                </tr>
                                <tr>
                                    <td>MS001</td>
                                    <td>Razer Python V3</td>
                                    <td>Mouse</td>
                                    <td>Razer</td>
                                    <td>150$</td>
                                    <td>0</td>

                                    <td style="color:#5D87FF;">
                                        <a href="ProductInformation.html">
                                            <i class="fa-solid fa-pen"
                                               style="color: rgb(255, 200, 0)"></i>
                                        </a> <!--Edit here-->
                                        <a onclick="return confirm('You are about to delete this product and can not be undo');" href="" style="text-decoration: none;"><i class="fa-solid fa-trash" style="color: red;"></i></a> <!--Chỉ xuất hiện khi quantity == 0-->
                                    </td>
                                </tr>
                        </table>

                        <!--Beginning Of Categories Pop-up-->
                        <div id="contactForm" class="col-3">
                            <div class="col-12" style="text-align: center; padding: 10px;">
                                <h1 class="Title">CATEGORIES</h1>
                                <button type="button" id="contactAddCategory" class="btn btn-outline-primary m-1">
                                    <i class="fa-solid fa-plus"></i>
                                    Add
                                </button>
                            </div>
                            <table id="example2" class="table table-striped" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Tiger Nixon</td>
                                        <td>System Architect</td>
                                        <td>
                                            <i class="fa-solid fa-pen" style="color: rgb(255, 200, 0)" type="button"
                                               id="contactCategoryEdit"></i>
                                            <a onclick="return confirm('You are about to delete this category and can not be undo');" href="" style="text-decoration: none;"><i class="fa-solid fa-trash" style="color: red;"></i></a>
                                        </td>
                                    </tr>
                            </table>
                            <!--Add Category-->
                            <div id="contactFormAddCategory" class="col-8">
                                <form method="POST" action="" id="" class="" enctype="multipart/form-data">
                                    <!--Add Action Here for Cleny-->
                                    <div class="row">
                                        <div class="col-md-612">
                                            <div class="form-group">
                                                <input type="text" class="form-control" name="Cat_Name" id="Cat_Name"
                                                       placeholder="Insert Category Name">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group" style="text-align: center; padding-top: 20px;">
                                            <input type="submit" value="Submit" class="btn btn-primary">
                                            <input type="reset" value="Reset" class="btn btn-secondary">
                                            <div class="submitting"></div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <!--Add Category-->
                            <!--Edit Category-->
                            <div id="contactFormEditCategory" class="col-8">
                                <form method="POST" action="" id="" class="" enctype="multipart/form-data">
                                    <!--Add Action Here for Cleny-->
                                    <div class="row">
                                        <div class="col-md-612">
                                            <div class="form-group">
                                                <input type="text" class="form-control" name="Cat_Name" id="Cat_Name"
                                                       value="Gaming Mouse">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group" style="text-align: center; padding-top: 20px;">
                                            <input type="submit" value="Submit" class="btn btn-primary">
                                            <input type="reset" value="Reset" class="btn btn-secondary">
                                            <div class="submitting"></div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <!--Edit Category-->
                        </div>
                        <!--End Of Categories Pop-up-->

                        <!--Beginning Of Brand Pop-up-->

                        <div id="contactForm2" class="col-3">
                            <div class="col-12" style="text-align: center; padding: 10px;">
                                <h1 class="Title">BRANDS</h1>
                                <button type="button" class="btn btn-outline-primary m-1" id="contactAddBrand">
                                    <i class="fa-solid fa-plus"></i>
                                    Add
                                </button>
                            </div>
                            <table id="example3" class="table table-striped" style="width:100%; overflow:scroll;">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var items in ViewBag.BrandList)
                                    {
                                        <tr>
                                            <td>@items.brand_id</td>
                                            <td>@items.brand_name</td>
                                            <td>
                                                <!--Edit-->
                                                <i class="fa-solid fa-pen" style="color: rgb(255, 200, 0)" type="button" data-BrandEdit="@items.brand_id"
                                                   id="contactBrandEdit" onclick="EditBrand(this)"></i>

                                                
                                              <!--Delete-->
                                                <a onclick="return confirm('You are about to delete this brand and can not be undo');" href=""><i class="fa-solid fa-trash" style="color: red;"></i></a>
                                            </td>
                                        </tr>
                                    }
                                    </tbody>
                            </table>

                            <!--Add Brand-->
                            <div id="contactFormAddBrand" class="col-8">
                                <form method="POST" action="" id="" class="" enctype="multipart/form-data">
                                    <!--Add Action Here for Cleny-->
                                    <div class="row">
                                        <div class="col-md-12" style="padding-bottom: 20px;">
                                            <div class="form-group">
                                                <input type="text" class="form-control" name="Brand_Name" id="Brand_Name"
                                                       placeholder="Insert Brand Name">
                                            </div>
                                        </div>

                                        <div class="col-md-12">
                                            <div class="form-group" style="text-align: center; padding: 5px;">
                                                <h3 style="color: #5D87FF;">Brand Logo</h3>
                                                <input type="file" class="form-control" name="Brand_Logo" id="Brand_Logo"
                                                       placeholder="Insert Brand Logo">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group" style="text-align: center; padding-top: 20px;">
                                            <input type="submit" value="Submit" class="btn btn-primary">
                                            <input type="reset" value="Reset" class="btn btn-secondary">
                                            <div class="submitting"></div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <!--Add Brand-->

                            <!--Edit Brand-->
                            <div id="contactFormBrandEdit" class="col-8">
                                <form method="POST" action="" id="" class="" enctype="multipart/form-data">
                                    <!--Add Action Here for Cleny-->
                                    <div class="row">
                                        <div class="col-md-12" style="padding-bottom: 20px;">
                                            <div class="form-group">
                                                <input type="text" class="form-control" name="Brand_Name" id="Brand_Name" value="">
                                                <input type="hidden" class="form-control" name="Brand_ID" id="Brand_ID" value="">
                                            </div>
                                        </div>

                                        <div class="col-md-12">
                                            <h3 style="color: #5D87FF; text-align: center;">Brand Logo</h3>
                                            <div style="display: flex;
                                            justify-content: center;
                                            align-items: center;">
                                                <img src="../assets/images/backgrounds/rocket.png" alt="Smiley face" class="imgStyle"
                                                     width="100" height="100" title="Original Image" /> 
                                                     <!--Src lấy trên database-->
                                                <input type="hidden" class="form-control" name="Brand_Image" id="Brand_Image" value="">
                                            </div>

                                            <div>
                                                <input class="form-control" type="file">
                                                <label style="color: red;">
                                                    Input a new file to change
                                                    the image
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group" style="text-align: center; padding-top: 20px;">
                                            <input type="submit" value="Submit" class="btn btn-primary">
                                            <input type="reset" value="Reset" class="btn btn-secondary">
                                            <div class="submitting"></div>
                                        </div>
                                    </div>

                                </form>
                            </div>
                            <!--Edit Brand-->
                        </div>

                        <!--End Of Brand Pop-up-->
                        <!--Add Product-->
                        <div id="contactFormAddProduct" class="col-8">
                            <div class="col-12" style="text-align: center; padding: 10px;">
                                <h1 class="Title">ADD PRODUCT</h1>
                            </div>
                            <form method="POST" action="Product/AddProduct" id="AddForm" class="AddForm"
                                  enctype="multipart/form-data">
                                <div class="row">

                                    <!--Product ID -->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="label" for="name">Product ID</label>
                                            <input type="text" class="form-control" name="pro_id" id="pro_id" placeholder="ID">
                                        </div>
                                    </div>
                                    <!--Product ID -->
                                    <!--Product Name -->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="label" for="pro_name">Product Name</label>
                                            <input type="text" class="form-control" name="pro_name" id="pro_name"
                                                   placeholder="Product Name">
                                        </div>
                                    </div>
                                    <!--Product Name -->
                                    <!--Price -->
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="label" for="pro_price">Price</label>
                                            <input type="text" class="form-control" name="pro_price" id="pro_price" placeholder="Price">
                                        </div>
                                    </div>
                                    <!--Price -->
                                    <!--Categories -->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="label" for="category">Category</label>

                                            <select name="cate_id" class="form-control" id="cate_id">
                                                <option value="1">Mouse</option>
                                                <option value="2">Keyboard</option>
                                                <option value="3">Headphone</option>
                                                <option value="4">Gaming Chair</option>
                                                <option value="5">Controller</option>
                                            </select>
                                        </div>
                                    </div>
                                    <!--Categories -->
                                    <!--Brands -->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="label" for="brand">Brand</label>

                                            <select name="brand_id" class="form-control" id="brand_id">
                                                <option value="1">Asus</option>
                                                <option value="2">Logitech</option>
                                                <option value="3">Corsair</option>
                                                <option value="4">DareU</option>
                                                <option value="5">Akko</option>
                                                <option value="6">Razer</option>
                                                <option value="7">Steelseries</option>
                                                <option value="8">Rapoo</option>
                                            </select>
                                        </div>
                                    </div>
                                    <!--Brands -->
                                    <!--Add Images -->
                                    <div class="col-md-6 ">
                                        <div id="room_fileds_image">
                                            <div class="content">
                                            </div>
                                        </div>
                                        <br>
                                        <input class="btn btn-outline-primary m-1" type="button" id="more_fields"
                                               onclick="add_fieldsImage();" value="Add new Image" />
                                    </div>
                                    <div class="col-md-6 ">
                                        <!--Add Images -->
                                        <!--Add Attribute-->
                                        <div id="room_fileds">
                                            <div class="content">
                                            </div>
                                        </div>
                                        <br>
                                        <input class="btn btn-outline-primary m-1" type="button" id="more_fields"
                                               onclick="add_fieldsDetails();" value="Add new Details" />
                                    </div>
                                    <!--Add Attribute-->
                                    <!--Description -->
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="label" for="#">Description</label>
                                            <textarea name="pro_des" class="form-control" id="message" cols="30" rows="10"
                                                      placeholder="Description"></textarea>
                                        </div>
                                    </div>
                                    <!--Description -->

                                    <div class="col-md-12">
                                        <div class="form-group" style="text-align: center; padding-top: 20px;">
                                            <input type="submit" value="Submit" class="btn btn-primary">
                                            <input type="reset" value="Reset" class="btn btn-secondary">
                                            <div class="submitting"></div>
                                        </div>
                                    </div>
                            </form>
                        </div>
                        <!--Add Product -->


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var room = 0;
    function add_fieldsDetails() {
        room++;
        var objTo = document.getElementById('room_fileds')
        var divtest = document.createElement("div");
        divtest.innerHTML = ' <label>Attribute ' + room + '</label> <input class="form-control" type="text" name="feature" value="" /> <label>Attribute Description</label> <input class="form-control" type="text" name="description" value="" />';

        objTo.appendChild(divtest)
    }
</script>
<script>

    var room_image = 0;
    var img = 1;
    function add_fieldsImage() {
        room_image++;
        img++;
        var objTo = document.getElementById('room_fileds_image')
        var divtest = document.createElement("div");
        divtest.innerHTML = ' <label>Image ' + room_image + '</label> <input class="form-control" type="file" name="imgFile"> ';

        objTo.appendChild(divtest)
    }
</script>


