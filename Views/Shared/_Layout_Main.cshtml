@using System.Collections.Generic
@using Newtonsoft.Json
@using SWP391_Group3_FinalProject.Models

@{
    // Retrieve the serialized list from the session
    var serializedList = Context.Session.GetString("listBrand");

    // Deserialize the JSON string into a list
    var brandList = JsonConvert.DeserializeObject<List<Brand>>(serializedList);

    var serializedCateList = Context.Session.GetString("listCate");

    // Deserialize the JSON string into a list
    var cateList = JsonConvert.DeserializeObject<List<Category>>(serializedCateList);

    var serialiedAccount = Context.Session.GetString("Session");
    var countCart = Context.Session.GetString("Count");
    int count = 0;
    Customer acc = null;
    if (serialiedAccount != null)
    {
        acc = JsonConvert.DeserializeObject<Customer>(serialiedAccount);
    }
    if (countCart != null)
    {
        count = JsonConvert.DeserializeObject<int>(countCart);
    }
}

